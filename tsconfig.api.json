{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "api/**/*",
    "shared/**/*"
  ],
  "exclude": [
    "client/**/*",
    "server/**/*"
  ]
}